{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": false,
    "types": ["vitest/globals", "@playwright/test"]
  },
  "include": ["src", "tests", "*.ts", "*.mts", "*.cts"]
}
